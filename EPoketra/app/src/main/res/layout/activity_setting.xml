<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A74D5"
        android:id="@+id/head">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Old Password"
            android:id="@+id/txtop"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/oldpsw"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtop"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:id="@+id/txtnp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/oldpsw"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp" />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/newpsw"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtnp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveNew"
        android:layout_below="@+id/newpsw"
        android:layout_centerHorizontal="true"
        android:background="#49A1E8"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backS"
        android:layout_below="@+id/saveNew"
        android:layout_centerHorizontal="true"
        android:background="#49A1E8"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backS"
        android:layout_marginTop="47dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="150dp"
            android:layout_height="243dp"
            android:src="@drawable/foto" />

        <LinearLayout
            android:id="@+id/viewData"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Application is developped by"
                    android:textColor="#0B0909" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/typeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Andriantsimba Sahoby"
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM: "
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 1841720220"
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On: "
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 01 August 2022"
                    android:textColor="#0C0B0B"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>